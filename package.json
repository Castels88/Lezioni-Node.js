{
    "name": "api-project",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint src/ --cache --fix",
        "test": "jest",
        "build": "tsc",
        "build:dev": "tsc --watch",
        "start": "node --enable-source-maps dist/server.js",
        "start:dev": "nodemon --watch dist/ --watch .env",
        "dev": "npm run build && concurrently 'npm:build:dev' 'npm:start:dev'"
    },
    "engines": {
        "node": ">=16"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/simonteaching/api-project.git"
    },
    "bugs": {
        "url": "https://github.com/simonteaching/api-project/issues"
    },
    "homepage": "https://github.com/simonteaching/api-project#readme",
    "devDependencies": {
        "@tsconfig/node16": "^1.0.2",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.5.1",
        "@types/node": "^17.0.31",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "concurrently": "^7.4.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "jest": "^28.0.3",
        "nodemon": "^2.0.20",
        "prettier": "2.6.2",
        "prisma": "^4.4.0",
        "supertest": "^6.3.0",
        "ts-jest": "^28.0.2",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "@prisma/client": "^4.4.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.1",
        "express-async-errors": "^3.1.1",
        "knex": "^2.3.0",
        "sqlite3": "^5.1.2"
    }
}
